{{ form_start(form) }}
    <div style="width: 500px;">
        {{ form_row(form.nom) }}
        {{ form_row(form.prenom, {label: 'Prénom'}) }}
        {{ form_row(form.rue, {label: 'Adresse'}) }}
        {{ form_row(form.ville, {'attr': {'class': 'form-inline'}}) }}
        {{ form_row(form.code_postal, {'attr': {'class': 'form-inline'}}) }}
        {{ form_row(form.tel, {label:'Téléphone'}) }}
    </div>
    <button type="submit" class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
    <br\>
{{ form_end(form) }}