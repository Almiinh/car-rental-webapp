{% extends 'base.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block body %}
    <h1>Contrat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N° de contrat</th>
                <td>{{ contrat.id }}</td>
            </tr>
            <tr>
                <th>N° client</th>
                <td>{{ contrat.client.id }}</td>
            </tr>
            <tr>
                <th>Immatriculation</th>
                <td>{{ contrat.voiture.immatriculation }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ contrat.type }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ contrat.dateDepart ? contrat.dateDepart|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ contrat.dateRetour ? contrat.dateRetour|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_contrat_index') }}">Retour à la liste</a>

    <a class="btn btn-primary" href="{{ path('app_contrat_edit', {'id': contrat.id}) }}">Modifier</a>

    {{ include('contrat/_delete_form.html.twig') }}
{% endblock %}
