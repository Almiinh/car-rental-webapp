{% extends 'base.html.twig' %}

{% block title %}Voiture{% endblock %}

{% block body %}
    <h1>Voiture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ voiture.id }}</td>
            </tr>
            <tr>
                <th>Immatriculation</th>
                <td>{{ voiture.immatriculation }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ voiture.marque }}</td>
            </tr>
            <tr>
                <th>Modèle</th>
                <td>{{ voiture.modele }}</td>
            </tr>
            <tr>
                <th>Carburant</th>
                <td>{{ voiture.carburant }}</td>
            </tr>
            <tr>
                <th>Capacité</th>
                <td>{{ voiture.capacite }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_voiture_index') }}">Retour à la liste</a>

    <a class="btn btn-primary" href="{{ path('app_voiture_edit', {'id': voiture.id}) }}">Modifier</a>

    {{ include('voiture/_delete_form.html.twig') }}
{% endblock %}
